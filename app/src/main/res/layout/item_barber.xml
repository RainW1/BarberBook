<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/rbBarber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/accent"/>

        <ImageView
            android:id="@+id/ivBarberPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginStart="8dp"
            android:contentDescription="Barber"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvBarberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barber Name"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvBarberRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.8 • 5 years exp"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBarberStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="12sp"
            android:textColor="@color/status_upcoming"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
